@model IEnumerable<LanchesMac.Models.Pedido>

<h2>Pedidos Por Período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Inicial</label>
                    <input class="form-control" type="date" name="minDate" value="@ViewData["minDate"]" />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Inicial</label>
                    <input class="form-control" type="date" name="maxDate" value="@ViewData["maxDate"]" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
        <h3 class="panel-title">Total de Lanches nos pedidos = @Model.Sum(obj => obj.TotalItensPedido).ToString()</h3>
        <h3 class="panel-title">Valor Total do Pedidos = @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>@Html.DisplayNameFor(model => model.Id)</tr>
                <tr>@Html.DisplayNameFor(model => model.Nome)</tr>
                <tr>@Html.DisplayNameFor(model => model.Email)</tr>
                <tr>@Html.DisplayNameFor(model => model.Telefone)</tr>
                <tr>@Html.DisplayNameFor(model => model.PedidoTotal)</tr>
                <tr>@Html.DisplayNameFor(model => model.TotalItensPedido)</tr>
                <tr>@Html.DisplayNameFor(model => model.PedidoEntregueEm)</tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.PedidoTotal)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalItensPedido)</td>
                        <td>@Html.DisplayFor(modelItem => item.PedidoEntregueEm)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>